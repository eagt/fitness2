<div class="row">
        <%= render partial: "shared/leftcard" %>
        <%= render partial: "shared/centrecard" %>
        <%= render partial: "shared/rightcard" %>     
</div>

<div class="row">&nbsp;</div>

<div class="card card-outline-success">
  <div class="card-header card-inverse card-success text-center">
    <p id="notice"><%= notice %></p>
    <h1>Exercises</h1>
  </div>

  <div class="card-block">
    <table class="table table-responsive table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>Type</th>
            <th>Name</th>
            <th>Muscle</th>
            <th>Equipment</th>
            <th>Description</th>
            <th colspan="3"></th> <!-- only three for the three actions ( show, edit and destroy) --> 
        </tr>
      </thead>

      <tbody class="inshtaex">
        <% @user.exercises.each do |exercise| %>
          <tr>
            <td><%= exercise.etypes.size > 1 ? exercise.etypes.first.name + "" + " (+#{exercise.etypes.size - 1})" : exercise.etypes.first.name %></td>
            <td><%= exercise.name %></td> 
            <td><%= exercise.muscles.size > 1 ? exercise.muscles.first.name + "" + "" + " (+)#{exercise.muscles.size - 1}" : exercise.muscles.first.name %></td>
            <td><%= exercise.equipment.size > 1 ? exercise.equipment.first.name + "" + "" + " (+)#{exercise.equipment.size - 1}" : exercise.equipment.first.name %></td>
            <td><%= exercise.description %></td> 
            <td colspan="1"></td>
            <td><%= link_to 'Show', user_exercise_path(@user, exercise) %></td>
            <td><%= link_to 'Edit', edit_user_exercise_path(@user, exercise) %></td>
            <td><%= link_to 'Destroy', [@user, exercise], confirm: 'Are you sure?', method: :delete %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <%= link_to 'Back', users_path %>

  <div class="card-footer card-inverse card-success">
    <%= link_to(new_user_exercise_path, :class=>"card-inverse") do %>
      <%= icon('file-text-o','New Exercise', class: 'fa-2x') %> 
      <% end %>
 
  </div>  

